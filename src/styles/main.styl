@import './red-hat.css'
@import './quasar.variables.styl'
body  
    font-family: RedHatDisplay-R, Fallback, sans-serif;
    background: rgba(24, 44, 0, 0.16) 0% 0% no-repeat padding-box;
    max-width: 1200px;
    letter-spacing: 0.49px;
    margin: auto;
h5
    color: $primary;
    font-family: RedHatDisplay-B, Fallback, sans-serif;
    text-align: center;

.text-subtitle2
    font-family: RedHatDisplay-M, Fallback, sans-serif;
    color: #474B4F;
    letter-spacing: 1.2px;
    text-transform: uppercase;

.text-h6
    font-family: RedHatDisplay-M, Fallback, sans-serif;
    letter-spacing: 0.26px; 
    color: $primary; 

.text-bold
    color: rgba(0,0,0,0.60);
    font-family: RedHatDisplay-B, Fallback, sans-serif;   
    letter-spacing: 0.49px;

.my-card
    box-shadow: 0 4px 5px rgba(71, 75, 79, 0.32);

.q-header .q-toolbar .q-btn
    border-radius: 0;
    height: 50px;

.q-layout__section--marginal
    background: transparent linear-gradient(180deg, rgb(34, 38, 41) 0%, rgba(71, 75, 79, 0.98) 62%, rgba(107, 110, 112, 0.88) 100%) 0% 0% no-repeat padding-box;
    box-shadow: 0px 4px 8px #00000040;

.togglered
    background: transparent linear-gradient(180deg, rgb(227, 0, 27) 0%, rgba(227, 0, 27, 0.98) 61%, rgba(227, 0, 27, 0.8) 100%) 0% 0% no-repeat padding-box;
    box-shadow: 0px 2px 8px rgba(227, 0, 27, 0.36);

