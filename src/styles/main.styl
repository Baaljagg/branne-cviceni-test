@import './red-hat.css'
@import './quasar.variables.styl'
body  
    font-family: RedHatDisplay-R, Fallback, sans-serif;
    background: rgba(24, 44, 0, 0.16) 0% 0% no-repeat padding-box;
    max-width: 1200px;
    letter-spacing: 0.49px;
    margin: auto;
h5, h4
    color: $primary;
    font-family: RedHatDisplay-B, Fallback, sans-serif;
    text-align: center;

h4
    font-size: 1.8rem;
    text-transform: uppercase;

.q-separator
    height: 2px;
    background: rgba(97, 137, 47, 0.66);

.q-separator--vertical
    background: rgba(227, 0, 27, 0.88);
    margin: 16px 0;

.text-subtitle2
    font-family: RedHatDisplay-M, Fallback, sans-serif;
    color: #474B4F;
    letter-spacing: 1.2px;
    text-transform: uppercase;

.text-h6
    font-family: RedHatDisplay-M, Fallback, sans-serif;
    letter-spacing: 0.26px; 
    color: $primary; 

.text-bold
    color: rgba(0,0,0,0.60);
    font-family: RedHatDisplay-B, Fallback, sans-serif;   
    letter-spacing: 0.49px;

.text-medium
    color: #222629;
    font-family: RedHatDisplay-M, Fallback, sans-serif;   
    letter-spacing: 0.26px;    

.my-card
    box-shadow: 0 4px 5px rgba(71, 75, 79, 0.32);
    

.q-header .q-toolbar .q-btn
    border-radius: 0;
    height: 50px;

.q-layout__section--marginal
    background: transparent linear-gradient(180deg, rgb(34, 38, 41) 0%, rgba(71, 75, 79, 0.98) 62%, rgba(107, 110, 112, 0.88) 100%) 0% 0% no-repeat padding-box;
    box-shadow: 0px 4px 8px #00000040;

.togglered
    background: transparent linear-gradient(180deg, rgb(227, 0, 27) 0%, rgba(227, 0, 27, 0.98) 61%, rgba(227, 0, 27, 0.8) 100%) 0% 0% no-repeat padding-box;
    box-shadow: 0px 2px 8px rgba(227, 0, 27, 0.36);

.gradientBtnGreen
    background: transparent linear-gradient(0deg, rgba(134, 194, 50, 0.88) 0%, rgba(134, 194, 50, 0.96) 28%, rgba(97, 137, 47, 0.96) 73%, rgba(67, 97, 25, 1) 100%) 0% 0% no-repeat padding-box;   
    width: 240px;
    height: 36px;

.gradientBtnBlue
    background: transparent linear-gradient(1deg, rgba(72, 101, 180, 1) 0%, rgba(72, 101, 180, 1) 48%, rgba(36, 51, 90, 1) 100%) 0% 0% no-repeat padding-box;   
    width: 240px;
    height: 36px;
    text-transform: none;

.gradientBtnRed
    background: transparent linear-gradient(0deg, rgba(221, 75, 57, 1) 0%, rgba(221, 75, 57, 1) 58%, rgba(111, 38, 29, 1) 100%) 0% 0% no-repeat padding-box;   
    width: 240px;
    height: 36px;
    text-transform: none;





